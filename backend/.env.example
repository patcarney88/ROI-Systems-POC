# ============================================
# ROI Systems Backend Environment Configuration
# ============================================
# Copy this file to .env and update values for your environment
# DO NOT commit .env file to version control

# ============================================
# SERVER CONFIGURATION
# ============================================
# Node environment: development, production, test
NODE_ENV=development

# Server port (default: 3000)
PORT=3000

# API version prefix (default: v1)
API_VERSION=v1

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Option 1: Use individual database configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=roi_systems_dev
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Option 2: Use DATABASE_URL (overrides individual settings)
# DATABASE_URL=postgresql://username:password@localhost:5432/roi_systems_dev

# Database sync options (development only, set to true to auto-sync models)
DB_SYNC=false

# ============================================
# SECURITY CONFIGURATION
# ============================================
# JWT Secret - MUST be at least 32 characters in production
# Generate using: openssl rand -base64 32
JWT_SECRET=change_this_to_a_very_secure_random_string_in_production

# JWT Expiration times
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=change_this_to_another_secure_random_string_in_production
JWT_REFRESH_EXPIRES_IN=30d

# Bcrypt salt rounds (10-12 recommended)
BCRYPT_SALT_ROUNDS=10

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins
# Example: http://localhost:5051,https://app.roisystems.com
CORS_ORIGINS=http://localhost:5051,http://localhost:3000

# ============================================
# RATE LIMITING
# ============================================
# Rate limit window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window (default: 100)
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# REDIS CONFIGURATION (Optional - for caching & sessions)
# ============================================
# Redis connection URL
# REDIS_URL=redis://localhost:6379

# Redis options
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# ============================================
# AWS CONFIGURATION (Optional - for S3 storage)
# ============================================
# AWS credentials
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1

# S3 bucket for document storage
# S3_BUCKET_NAME=roi-systems-documents

# ============================================
# EMAIL CONFIGURATION (Optional - SendGrid)
# ============================================
# SendGrid API Key
# SENDGRID_API_KEY=your_sendgrid_api_key_here

# Default from email address
# SENDGRID_FROM_EMAIL=noreply@roisystems.com

# Email templates
# SENDGRID_WELCOME_TEMPLATE_ID=
# SENDGRID_PASSWORD_RESET_TEMPLATE_ID=

# ============================================
# AI SERVICES (Optional)
# ============================================
# Anthropic Claude API
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API (if using GPT models)
# OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
# Maximum file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# Upload directory path
UPLOAD_DIR=./uploads

# Allowed file extensions (comma-separated)
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif,txt,csv,xlsx,xls

# Storage type: 'local' or 's3'
STORAGE_TYPE=local

# Base URL for file downloads (used in local storage)
BASE_URL=http://localhost:3000

# ============================================
# LOGGING CONFIGURATION
# ============================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Log file directory
LOG_DIR=./logs

# Enable file logging (true/false)
LOG_TO_FILE=true

# Maximum log file size (in MB)
LOG_MAX_SIZE=10

# Maximum number of log files to keep
LOG_MAX_FILES=30

# ============================================
# MONITORING & METRICS (Optional)
# ============================================
# Sentry DSN for error tracking
# SENTRY_DSN=your_sentry_dsn_here

# New Relic License Key
# NEW_RELIC_LICENSE_KEY=your_new_relic_key_here

# ============================================
# EXTERNAL SERVICES (SoftPro Integration)
# ============================================
# SoftPro 360 Integration
# SOFTPRO_API_URL=https://api.softpro360.com
# SOFTPRO_API_KEY=your_softpro_api_key
# SOFTPRO_API_SECRET=your_softpro_api_secret
# SOFTPRO_WEBHOOK_SECRET=your_webhook_secret

# ============================================
# QUEUE CONFIGURATION (Optional - Bull/Redis Queue)
# ============================================
# Enable background job processing
# ENABLE_QUEUES=false

# Queue concurrency
# QUEUE_CONCURRENCY=5

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable specific features
ENABLE_DOCUMENT_AI=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_WEBHOOKS=false
ENABLE_ANALYTICS=true

# ============================================
# DEVELOPMENT TOOLS
# ============================================
# Enable API documentation (Swagger)
ENABLE_API_DOCS=true

# Enable debug mode
DEBUG=false

# Pretty print JSON responses
PRETTY_JSON=true

# ============================================
# NOTES
# ============================================
# 1. Never commit .env file to version control
# 2. Use strong, unique passwords and secrets
# 3. Rotate secrets regularly in production
# 4. Use environment-specific configurations
# 5. Enable only necessary features in production
# 6. Monitor logs for security issues
# 7. Keep dependencies up to date