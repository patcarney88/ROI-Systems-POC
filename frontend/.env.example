# ============================================================================
# ROI Systems Frontend - Environment Variables
# ============================================================================
# Copy this file to .env.development or .env.production and fill in the values

# ============================================================================
# API Configuration
# ============================================================================

# Backend API URL (without trailing slash)
# Development: http://localhost:3000
# Production: https://api.roisystems.com
VITE_API_URL=http://localhost:3000

# API Version (optional, defaults to v1)
VITE_API_VERSION=v1

# API Timeout in milliseconds (optional, defaults to 30000)
VITE_API_TIMEOUT=30000

# ============================================================================
# Application Configuration
# ============================================================================

# Application Name
VITE_APP_NAME=ROI Systems

# Application Environment (development, staging, production)
VITE_APP_ENV=development

# Application Version
VITE_APP_VERSION=1.0.0

# Base URL for the frontend (without trailing slash)
VITE_APP_URL=http://localhost:5173

# ============================================================================
# Feature Flags
# ============================================================================

# Enable development tools
VITE_ENABLE_DEV_TOOLS=true

# Enable error logging to console
VITE_ENABLE_ERROR_LOGGING=true

# Enable API request logging
VITE_ENABLE_API_LOGGING=true

# Enable analytics
VITE_ENABLE_ANALYTICS=false

# Enable mock data (for testing without backend)
VITE_ENABLE_MOCK_DATA=false

# ============================================================================
# Authentication Configuration
# ============================================================================

# Token storage key prefix
VITE_TOKEN_STORAGE_PREFIX=roi_

# Session timeout in minutes
VITE_SESSION_TIMEOUT=1440

# Refresh token before expiry (minutes)
VITE_REFRESH_BEFORE_EXPIRY=5

# ============================================================================
# Third-party Services
# ============================================================================

# Google OAuth Client ID
VITE_GOOGLE_CLIENT_ID=

# Microsoft OAuth Client ID
VITE_MICROSOFT_CLIENT_ID=

# Sentry DSN (Error Monitoring)
VITE_SENTRY_DSN=

# Google Analytics ID
VITE_GA_ID=

# Intercom App ID (Customer Support)
VITE_INTERCOM_APP_ID=

# ============================================================================
# File Upload Configuration
# ============================================================================

# Maximum file size in MB
VITE_MAX_FILE_SIZE=25

# Allowed file types (comma-separated)
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Maximum concurrent uploads
VITE_MAX_CONCURRENT_UPLOADS=3

# ============================================================================
# AWS Configuration (if using direct S3 uploads)
# ============================================================================

# AWS Region
VITE_AWS_REGION=us-east-1

# S3 Bucket Name
VITE_AWS_S3_BUCKET=

# S3 CloudFront Domain (for file delivery)
VITE_AWS_CLOUDFRONT_DOMAIN=

# ============================================================================
# Email Configuration
# ============================================================================

# Support Email
VITE_SUPPORT_EMAIL=support@roisystems.com

# Sales Email
VITE_SALES_EMAIL=sales@roisystems.com

# ============================================================================
# Map/Location Services
# ============================================================================

# Google Maps API Key
VITE_GOOGLE_MAPS_API_KEY=

# Mapbox Access Token
VITE_MAPBOX_TOKEN=

# ============================================================================
# Payment/Billing
# ============================================================================

# Stripe Publishable Key
VITE_STRIPE_PUBLISHABLE_KEY=

# ============================================================================
# Development Configuration
# ============================================================================

# Enable React Query DevTools
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true

# Enable Redux DevTools
VITE_ENABLE_REDUX_DEVTOOLS=true

# Mock API Delay (milliseconds)
VITE_MOCK_API_DELAY=500

# ============================================================================
# Notes:
# ============================================================================
# - All environment variables must be prefixed with VITE_ to be exposed to the frontend
# - Never commit .env files with sensitive values to version control
# - Use .env.example as a template for team members
# - Boolean values should be "true" or "false" as strings
