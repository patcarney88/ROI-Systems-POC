# Environment
NODE_ENV=development
ENVIRONMENT=local

# Database
DB_USER=roi_user
DB_PASSWORD=your_secure_password
DB_NAME=roi_poc
DATABASE_URL=postgresql://roi_user:your_secure_password@localhost:5432/roi_poc

# Redis
REDIS_PASSWORD=your_redis_password
REDIS_URL=redis://default:your_redis_password@localhost:6379

# JWT
JWT_SECRET=your_jwt_secret_min_32_chars
JWT_EXPIRES_IN=7d

# AWS (LocalStack for local, real AWS for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_ENDPOINT=http://localhost:4566

# S3 Buckets
S3_DOCUMENTS_BUCKET=roi-poc-documents
S3_ML_MODELS_BUCKET=roi-poc-ml-models

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# Email
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@roi-systems.com

# API URLs
API_URL=http://localhost:4000
NEXT_PUBLIC_API_URL=http://localhost:4000/graphql
NEXT_PUBLIC_WS_URL=ws://localhost:4000/graphql

# ML Service
ML_API_URL=http://localhost:8000

# Monitoring (Optional)
SENTRY_DSN=
DATADOG_API_KEY=

# Feature Flags
ENABLE_ML_FEATURES=true
ENABLE_EMAIL_CAMPAIGNS=true
ENABLE_ANALYTICS=true

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# Stripe (Optional)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Twilio (Optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=